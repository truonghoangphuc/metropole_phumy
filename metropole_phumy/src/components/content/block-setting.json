{
  "collectionName": "components_content_block_settings",
  "info": {
    "displayName": "Block Setting",
    "icon": "gift",
    "description": ""
  },
  "options": {},
  "attributes": {
    "BackgroundColor": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "TextColor": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "BackgroundImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "CSS": {
      "type": "string"
    },
    "BackgroundImageMobile": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "htmlID": {
      "type": "string",
      "maxLength": 50,
      "unique": true
    },
    "IsHeroBanner": {
      "type": "boolean",
      "default": false
    }
  }
}
